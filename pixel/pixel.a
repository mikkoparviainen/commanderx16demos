!to "pixel.prg", cbm

!source "../includes/system.inc"
!source "../includes/graphics.inc"

*=$0801
	+basic_sys

	jsr vera_init_320x240_8bpp ; set 8bpp bitmap mode
	lda #00
	sta colour
	jsr clear_screen

	; randomize pixels
-	lda #<320
	sta bound
	lda #>320
	sta bound+1 
	jsr getrandom_bounded
	lda brandom
	sta x
	lda brandom+1
	sta x+1

	lda #<240
	sta bound
	lda #>240
	sta bound+1
	jsr getrandom_bounded
	lda brandom
	sta y
	lda brandom+1
	sta y+1

	jsr getrandom_bounded
	lda random
	sta colour
	jsr draw_pixel
	jmp -

	rts
